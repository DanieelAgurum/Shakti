# = ==========================================
# üîß ACTIVAR REESCRITURA DE URLS
# = ==========================================
RewriteEngine On
RewriteBase /shakti/
# = ==========================================
# ‚öôÔ∏è EVITAR AFECTAR ARCHIVOS O CARPETAS REALES
# = ==========================================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# = ==========================================
# üåê RUTAS AMIGABLES (home, about, contact, etc.)
# Ejemplo: /shakti/home -> index.php?page = home
# = ==========================================
RewriteRule ^(index)/?$ index.php [L,QSA]
# = ==========================================
# üö´ BLOQUEAR ACCESO DIRECTO A VISTAS SENSIBLES
# = ==========================================
# Si intentan acceder directamente a /Vista, /Vista/usuaria o /Vista/admin -> enviar a 404
RewriteRule ^Vista/?$ Vista/404.php [L,QSA]
RewriteRule ^Vista/usuaria/?$ Vista/404.php [L,QSA]
RewriteRule ^Vista/admin/?$ Vista/404.php [L,QSA]
# = ==========================================
# ‚úÖ EXCEPCIONES PERMITIDAS
# = ==========================================
# Permitir acceso directo a ciertas vistas espec√≠ficas
RewriteRule ^Vista/chat/?$ Vista/chat.php [L,QSA]
RewriteRule ^Vista/contacto/?$ Vista/contacto.php [L,QSA]
RewriteRule ^Vista/especialista/perfil/?$ Vista/especialista/perfil.php [L,QSA]
RewriteRule ^Vista/usuaria/alzalaVoz/?$ Vista/usuaria/alzalaVoz.php [L,QSA]
RewriteRule ^Vista/usuaria/especialistas/?$ Vista/usuaria/especialistas.php [L,QSA]
RewriteRule ^Vista/usuaria/foro/?$ Vista/usuaria/foro.php [L,QSA]
RewriteRule ^Vista/usuaria/libreYSegura/?$ Vista/usuaria/libreYSegura.php [L,QSA]
RewriteRule ^Vista/usuaria/perfil/?$ Vista/usuaria/perfil.php [L,QSA]
RewriteRule ^Vista/usuaria/publicaciones/?$ Vista/usuaria/publicaciones.php [L,QSA]
# = ==========================================
# ‚ö†Ô∏è P√ÅGINA 404 PERSONALIZADA
# = ==========================================
ErrorDocument 404 /shakti/Vista/404.php
