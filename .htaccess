# = =========================================
# üîß ACTIVAR REESCRITURA DE URLS
# = =========================================
RewriteEngine On
RewriteBase /shakti/
# = =========================================
# ‚öôÔ∏è EVITAR AFECTAR ARCHIVOS O CARPETAS REALES
# = =========================================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# = =========================================
# üåê RUTAS AMIGABLES (home, about, contact, etc.)
# Ejemplo: /shakti/home -> index.php?page = home
# = =========================================
RewriteRule ^(index)/?$ index.php [L,QSA,NC]
# = =========================================
# üö´ BLOQUEAR ACCESO DIRECTO A VISTAS SENSIBLES
# = =========================================
RewriteRule ^Vista/?$ Vista/404.php [L,QSA,NC]
RewriteRule ^Vista/usuaria/?$ Vista/404.php [L,QSA,NC]
RewriteRule ^Controlador/?$ Vista/404.php [L,QSA,NC]
# = =========================================
# ‚úÖ EXCEPCIONES PERMITIDAS
# = =========================================
RewriteRule ^Vista/chat/?$ Vista/chat.php [L,QSA,NC]
RewriteRule ^Vista/Instituciones/?$ Vista/Instituciones.php [L,QSA,NC]
RewriteRule ^Vista/login/?$ Vista/login.php [L,QSA,NC]
RewriteRule ^Vista/recuperarContra/?$ Vista/recuperarContra.php [L,QSA,NC]
RewriteRule ^Vista/Contenido/?$ Vista/Contenido_1.php [L,QSA,NC]
RewriteRule ^Vista/contacto/?$ Vista/contacto.php [L,QSA,NC]
RewriteRule ^Vista/especialista/perfil/?$ Vista/especialista/perfil.php [L,QSA,NC]
RewriteRule ^Vista/usuaria/alzalaVoz/?$ Vista/usuaria/alzalaVoz.php [L,QSA,NC]
RewriteRule ^Vista/usuaria/especialistas/?$ Vista/usuaria/especialistas.php [L,QSA,NC]
RewriteRule ^Vista/usuaria/foro/?$ Vista/usuaria/foro.php [L,QSA,NC]
